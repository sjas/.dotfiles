# copy ip of host to clipboard
gip() {
    dig $1 +short |  xclip
    if [ $? -eq 0 ]; then
        echo 'host IP copied to clipboard'
    else
        echo 'could not copy to clipboard or could not find a ip'
    fi
}

rdns() {
    echo "${$(dig -x $(dig $1 +short) +short)%?}"
}

digs() {
    echo "${$(dig +short $@)}"
}

